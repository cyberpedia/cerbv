# Cerberus CTF Platform - Environment Variables
# Copy to .env and fill in values

# =============================================================================
# PostgreSQL
# =============================================================================
POSTGRES_USER=cerberus_admin
POSTGRES_PASSWORD=CHANGE_ME_STRONG_PASSWORD_HERE
POSTGRES_SHARED_BUFFERS=2GB
POSTGRES_EFFECTIVE_CACHE_SIZE=6GB
POSTGRES_MAINTENANCE_WORK_MEM=512MB
POSTGRES_WORK_MEM=16MB

# =============================================================================
# Redis
# =============================================================================
REDIS_PASSWORD=CHANGE_ME_REDIS_PASSWORD
REDIS_ACL_PASSWORD=CHANGE_ME_ACL_PASSWORD
REDIS_ADMIN_PASSWORD=CHANGE_ME_ADMIN_PASSWORD

# =============================================================================
# MinIO
# =============================================================================
MINIO_ROOT_USER=cerberus-admin
MINIO_ROOT_PASSWORD=CHANGE_ME_MINIO_ROOT_PASSWORD
MINIO_ACCESS_KEY=cerberus-app-access-key
MINIO_SECRET_KEY=CHANGE_ME_MINIO_SECRET_KEY
# Optional: KMS master key for encryption at rest
# MINIO_KMS_SECRET_KEY=your-32-byte-key-here

# =============================================================================
# Backup
# =============================================================================
RETENTION_DAYS=30
BACKUP_SCHEDULE=0 2 * * *
